Screen{  
  layout: grid;
  grid-size: 3;
  grid-columns: auto 1fr 1fr;
  grid-rows: auto 1fr 1fr;
  }

VerticalScroll {
    width: auto;
    height: auto;
    background: $boost;
    padding: 1;
}

.pane{
    height: 100%;
    row-span: 2;
    tint: magenta 40%;
}
CheckBox{
  height: 1fr;
}

Collections{
  dock: left;
  row-span: 3;
  width: 15%;
  height: 100%;
  overflow-y: auto;
}
